<UserControl x:Class="PointOfSale.CustominzationScreens.SideCustomizer"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:PointOfSale.CustominzationScreens"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>

        <Button Name="SmallButton" Click="SmallButton_Click">Small</Button>
        <Button Name="MediumButton" Grid.Row="1" Click="MediumButton_Click">Medium</Button>
        <Button Name="LargeButton" Grid.Row="2" Click="LargeButton_Click">Large</Button>
        
        
    </Grid>
</UserControl>
