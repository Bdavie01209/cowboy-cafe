<UserControl x:Class="PointOfSale.CustominzationScreens.CowpokeChiliCustomizer"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:PointOfSale.CustominzationScreens"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>

        <Button Name="ToggleCheeseButton" Click="ToggleCheeseButton_Click">Cheese</Button>
        <Button Name="ToggleSourCreamButton" Grid.Row="1" Click="ToggleSourCreamButton_Click">Sour Cream</Button>
        <Button Name="ToggleGreenOnionButton" Grid.Column="1" Click="ToggleGreenOnionButton_Click">Green Onion</Button>
        <Button Name="ToggleTortiaStripsButton" Grid.Column="1" Grid.Row="1" Click="ToggleTortiaStripsButton_Click">Tortia Strips</Button>


    </Grid>
</UserControl>
